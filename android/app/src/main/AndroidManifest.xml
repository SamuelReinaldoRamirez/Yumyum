        <!-- Clé d'API Google Maps (si nécessaire) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBM05T0u8LoAKr2MtbTIjXtFmrU-06ye6U"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Branch init -->
		<!-- REPLACE `BranchKey` with the value from your Branch Dashboard -->
		<meta-data android:name="io.branch.sdk.BranchKey" android:value="key_live_dygK3WSss6PAxaR17xXRYpkaACmu0ygy" />
		<!-- REPLACE `BranchKey.test` with the value from your Branch Dashboard -->
